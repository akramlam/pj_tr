@startuml Binome Matcher - Simplified Architecture

skinparam monochrome true
skinparam shadowing false
skinparam packageStyle rectangle
skinparam defaultFontSize 12

' Core Domain
package "Domain" {
    class User {
        username
        email
        password
    }
    
    class Profile {
        formation
        skills
        preferences
    }
    
    class Message {
        content
        timestamp
    }
}

' Backend
package "Backend API" {
    class AuthController
    class ProfileController
    class MessageController
    class MatchController
    
    class AuthService
    class ProfileService
    class MessageService
    class MatchService
    
    class UserRepository
    class ProfileRepository
    class MessageRepository
}

' Security
package "Security" {
    class JwtTokenProvider
    class SecurityConfig
}

' Android Client
package "Android App" {
    class LoginActivity
    class MainActivity
    class ApiClient
    
    package "Fragments" {
        class ProfileFragment
        class MessagesFragment
        class MatchesFragment
    }
}

' Database
database "PostgreSQL" as DB

' Core relationships
Profile --> User
Message --> User : sender
Message --> User : recipient

' Service layer
AuthController --> AuthService
ProfileController --> ProfileService
MessageController --> MessageService
MatchController --> MatchService

' Repository layer
AuthService --> UserRepository
ProfileService --> ProfileRepository
MessageService --> MessageRepository
MatchService --> UserRepository

' Security
AuthService --> JwtTokenProvider

' Data persistence
UserRepository --> DB
ProfileRepository --> DB
MessageRepository --> DB

' Android
LoginActivity --> ApiClient
MainActivity --> ProfileFragment
MainActivity --> MessagesFragment
MainActivity --> MatchesFragment
ApiClient ..> AuthController : HTTP
ApiClient ..> ProfileController : HTTP
ApiClient ..> MessageController : HTTP

@enduml