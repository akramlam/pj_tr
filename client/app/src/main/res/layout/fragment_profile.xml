<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Status Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/design_default_color_primary" />

                <TextView
                    android:id="@+id/tvProfileStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_not_created"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Profile Display (Read-only) -->
        <LinearLayout
            android:id="@+id/layoutProfileDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Profile Information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/design_default_color_primary" />

                    <TextView
                        android:id="@+id/tvFormationDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textSize="16sp"
                        android:text="Formation: Computer Science" />

                    <TextView
                        android:id="@+id/tvSkillsDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textSize="16sp"
                        android:text="Skills: Java, Python, React" />

                    <TextView
                        android:id="@+id/tvProjectsDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textSize="16sp"
                        android:text="Projects: Mobile App Development, AI Chatbot" />

                    <TextView
                        android:id="@+id/tvPreferencesDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Preferences: Looking for project partner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="Edit Profile"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Profile Form (Editable) -->
        <LinearLayout
            android:id="@+id/layoutProfileForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Formation Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Formation/Studies"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/design_default_color_primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/design_default_color_primary"
                        app:hintTextColor="@color/design_default_color_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFormation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., Computer Science, Engineering, Business"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Skills Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Skills &amp; Technologies"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/design_default_color_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Select your skills (tap to toggle):"
                        android:textSize="14sp"
                        android:alpha="0.7" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Projects Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Current Projects"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/design_default_color_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Enter your current projects (one per line):"
                        android:textSize="14sp"
                        android:alpha="0.7" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/design_default_color_primary"
                        app:hintTextColor="@color/design_default_color_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProjects"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., Mobile App Development&#10;Machine Learning Project&#10;Website Redesign"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLines="8"
                            android:gravity="start" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Preferences Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Preferences &amp; Goals"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/design_default_color_primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/design_default_color_primary"
                        app:hintTextColor="@color/design_default_color_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPreferences"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="What are you looking for in a study partner? Projects you want to work on?"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLines="5"
                            android:gravity="start" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="@string/create_profile"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView> 